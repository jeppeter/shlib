#!/bin/sh


script_file=`which $0`
if [  -z "$script_file"  ]
then
        script_file=`readlink -f $0`
fi
script_dir=`dirname $script_file`

. "$script_dir/cpfuncs"

DEF_MNTDIR=$(GetSmbMountDir)
DEF_BASEDIR=

gitbase_dir=$(GetGitDir)
DEF_BASEDIR=`basename $gitbase_dir`
if [ "$DEF_BASEDIR" = "/" ]
then
        DEF_BASEDIR=""
fi

basedir=$DEF_BASEDIR
mntdir=$DEF_MNTDIR

Usage()
{
        _ec=$1
        _fmt=$2
        _fp=/proc/$/fd/2

        if [ $_ec -eq 0 ]
                then
                _fp=/proc/self/fd/1
        fi

        if [ -n "$_fmt" ]
        then
                ${ECHO} "$_fmt" >$_fp
        fi

        ${ECHO} "$0 [OPTIONS] files..." >$_fp
        ${ECHO} "  -h|--help              to display this help information" >$_fp
        ${ECHO} "  -m|--mntdir <dir>      to specify mount dir default($DEF_MNTDIR)" >$_fp
        ${ECHO} "  -b|--basedir <dir>     to specify basedir default($DEF_BASEDIR)" >$_fp
        ${ECHO} "  destdir                ($DEF_MNTDIR/$DEF_BASEDIR)" >$_fp
        ${ECHO} "  files...               files or directory from current directory" >$_fp

        exit $_ec
}



CopyTo()
{
        _todir=$1
        _frombase=$2
        _basedir=$3

        ${ECHO} "from $_basedir/$_frombase to $_todir/$_frombase"
        if [ -d "$_basedir/$_frombase" ]
        then
                _bname1="$_todir/$_frombase"
                _bname=`dirname $_bname1`
                if [ ! -d $_bname ]
                then
                        ${ECHO} "mkdir -p ($_bname)"
                        ${SUDO_PREFIX} $MKDIR -p "$_bname"
                fi
            ${SUDO_PREFIX}         ${CP}  -r -f  "$_basedir/$_frombase" "$_bname"
        else
                _bname=`dirname $_todir/$_frombase`
                if [ ! -d "$_bname" ]
                        then
                        ${SUDO_PREFIX} $MKDIR -p $_bname
                fi

                ${SUDO_PREFIX} ${CP} -f "$_basedir/$_frombase" "$_todir/$_frombase"
        fi
}

while [ $# -gt 0 ]
do
        breakone=0
        case "$1" in
                -h|--help)
                        Usage 0 ""
                        ;;
                -m|--mntdir)
                        if [ $# -gt 1 ]
                        then
                                mntdir="$2"
                                shift
                        else
                                Usage 3 "$1 need arg"
                        fi
                        ;;
                -b|--basedir)
                        if [ $# -gt 1 ]
                        then
                                basedir="$2"
                                shift
                        else
                                Usage 3 "$1 need arg"
                        fi
                        ;;
                *)
                        breakone=1
                        ;;                        
        esac
        if [ $breakone -gt 0 ]
                then
                break
        fi
        shift
done

if [ -z "$mntdir" ]
        then
        Usage 4 "please specify mountdir by -m|--mntdir or mount them or export CP_SMB_DIR environment value"
fi


for item in $@
do
        _absitem=`${READLINK} -f $item`
        _issubdir=$(IsSub "$gitbase_dir" "$_absitem")
        if [ $_issubdir -gt 0 ]
                then
                curitem=$(GetSubDir "$gitbase_dir" "$_absitem")
            CopyTo "$mntdir/$basedir" "$curitem" "$gitbase_dir"
        else
                ${ECHO} "item($item) not subdir in ($gitbase_dir)" >&2
        fi
done

